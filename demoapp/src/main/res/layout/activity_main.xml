<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_gradient"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp"
    tools:context=".MainActivity">



    <!-- App Title with Modern Typography -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sailec_black"
        android:gravity="center"
        android:letterSpacing="0.05"
        android:paddingBottom="24dp"
        android:shadowColor="#80000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"
        android:text="Mobile Security Manager"
        android:textColor="@android:color/white"
        android:textSize="32sp"
        android:textStyle="bold" />

    <!-- Glassmorphism Card for Buttons -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#80FFFFFF"
        android:outlineAmbientShadowColor="#80FFFFFF"
        android:outlineSpotShadowColor="#80FFFFFF"
        app:cardBackgroundColor="#80FFFFFF"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- User Management Button -->
            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#4CAF50"
                android:elevation="4dp"
                android:fontFamily="@font/sailec_medium"
                android:letterSpacing="0.02"
                android:onClick="openUserManagement"
                android:paddingVertical="16dp"
                android:stateListAnimator="@null"
                android:text="User Management"
                android:textColor="@android:color/white"
                app:icon="@drawable/ic_user_management"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconTint="@android:color/white" />

            <!-- Permissions Check Button -->
            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#2196F3"
                android:elevation="4dp"
                android:fontFamily="@font/sailec_medium"
                android:letterSpacing="0.02"
                android:onClick="openPermissionsCheck"
                android:paddingVertical="16dp"
                android:stateListAnimator="@null"
                android:text="Permissions Check"
                android:textColor="@android:color/white"
                app:icon="@drawable/ic_permissions_check"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconTint="@android:color/white" />

            <!-- Permission Logs Button -->
            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FF9800"
                android:elevation="4dp"
                android:fontFamily="@font/sailec_medium"
                android:letterSpacing="0.02"
                android:onClick="openPermissionLogs"
                android:paddingVertical="16dp"
                android:stateListAnimator="@null"
                android:text="Permission Logs"
                android:textColor="@android:color/white"
                app:icon="@drawable/ic_permission_logs"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconTint="@android:color/white" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>